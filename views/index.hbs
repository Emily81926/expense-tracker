<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-2"></div>
    <div class="col-8">
      <form action="/records/filter" class="form-group row">
        <select class="form-control col-8" id="exampleFormControlSelect1 category" placeholder="Readonly input here..." name="category">
          <option value="請選擇類別">請選擇類別</option>
          <option value="全部" {{#if (eq filteredCategory '全部' )}}selected{{/if}}>全部</option>
          <option value="餐飲食品" {{#if (eq filteredCategory '餐飲食品' )}}selected{{/if}}>餐飲食品</option>
          <option value="交通出行" {{#if (eq filteredCategory '交通出行' )}}selected{{/if}}>交通出行</option>
          <option value="休閒娛樂" {{#if (eq filteredCategory '休閒娛樂' )}}selected{{/if}}>休閒娛樂</option>
          <option value="家居物業" {{#if (eq filteredCategory '家居物業' )}}selected{{/if}}>家居物業</option>
          <option value="其他" {{#if (eq filteredCategory '其他' )}}selected{{/if}}>其他</option>
        </select>
        <button type="submit" class="btn btn-outline-dark">搜尋</button>
      </form>
    </div>
    <div class="col-2"></div>
    <div class="col-3"></div>
    <div class="col-5">
      <div class="row mt-3 justify-content-center">
        <div class="col-4 text-left">
          <h3> 總金額</h3>
        </div>
        <div class="col-8 text-right align-text-bottom">
          <h1> {{total record}}元</h1>
        </div>
      </div>
    </div>
    <div class="col-4"></div>
  </div>


  <div class="row mt-2">
    <table class="table table-striped table-hover col-10">
      {{#each record}}
      <tbody class="text-break">
        <tr class="row align-items-center justify-content-between px-2">
          <td class="border-0 text-center">
            <i class="{{this.icon}}"></i>
          </td>
          <td class="text-center border-0">
            <h4 class="mb-1">{{ this.name }}</h4>
            <small class="date">{{dateFormate this.date }}</small>
          </td>
          <td class="border-0">
            <span class="amount">{{ this.amount }}</span>元
          </td>
          <td class="border-0">
            <a class="" href="./records/{{ this._id }}/edit">修改</a>
            
            <form action="/records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit">刪除</button>
            </form>
          </td>

        </tr>

      </tbody>
     {{/each}}
    </table>
    <div class="col-2"></div>
  </div>

</div>